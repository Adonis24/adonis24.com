{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/auth/signin.js", "pages/auth/signin.js", "pages/api/auth0/[...nextauth].ts", "pages/api/examples/protected.js", "pages/api/examples/session.js", "components/Layout.jsx", "middlewares/database.js"],
  "exclude": ["node_modules"]
}
